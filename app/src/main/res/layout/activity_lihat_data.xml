<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:orientation="vertical"
    tools:context=".LihatData">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="7dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logobpscover"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:background="@drawable/logo_bps_cover" />

            <TextView
                android:id="@+id/new_nama_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/logobpscover"
                android:fontFamily="serif"
                android:hint="Perusahaan"
                android:inputType="textMultiLine"
                android:textSize="24sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/new_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logobpscover"
                android:layout_marginBottom="45dp"
                android:fontFamily="serif"
                android:hint="alamat"
                android:inputType="textMultiLine"
                android:textSize="18dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_alamat"
                android:layout_centerHorizontal="true"
                android:fontFamily="serif"
                android:text="Menuju Lokasi" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="Kabupaten/Kota"
            android:textColor="#665555" />

